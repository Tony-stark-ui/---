.order-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #efefef;
  color: #666;
}
.order-item .order_num_row {
  display: flex;
  padding: 10rpx 0;
  justify-content: space-between;
}
.order-item .order_price_row {
  display: flex;
  padding: 10rpx 0;
  justify-content: space-between;
}
.order-item .order_price_row .prcie-value {
  color: var(--themeColor);
  font-size: 32rpx;
}
.order-item .order_time_row {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
}
